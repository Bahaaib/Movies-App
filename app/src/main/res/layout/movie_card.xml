<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="192dp"
    android:layout_height="250dp"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="192dp"
        android:layout_height="250dp" />

    <com.like.LikeButton
        android:id="@+id/fav_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        card_view:circle_end_color="@color/heart_on"
        card_view:circle_start_color="@color/heart_on"
        card_view:dots_primary_color="@color/heart_on"
        card_view:dots_secondary_color="@color/heart_on"
        card_view:icon_size="25dp"
        card_view:icon_type="heart"
        card_view:like_drawable="@drawable/ic_heart_off"
        card_view:unlike_drawable="@drawable/ic_heart_on" />


</android.support.v7.widget.CardView>